@inherits LayoutComponentBase

@code {
    public bool IsAuthorized { get; } = true;
}

<header>
    <div class="left-container">
        <h1 class="logo">Logo</h1>
        @if (IsAuthorized)
        {
            <ul class="nav">
                <li class="nav-link">
                    <NavLink href="/" Match="NavLinkMatch.All" ActiveClass="active">Homepage</NavLink>
                </li>
                <li class="nav-link">
                    <NavLink href="/groups" Match="NavLinkMatch.All" ActiveClass="active">My Groups</NavLink>
                </li>
                <li class="nav-link">
                    <NavLink href="/events" Match="NavLinkMatch.All" ActiveClass="active">My Events</NavLink>
                </li>
                <li class="nav-link">
                    <NavLink href="/profile" Match="NavLinkMatch.All" ActiveClass="active">Profile</NavLink>
                </li>
                <li class="nav-link">
                    <a href="#">Log Out</a>
                </li>
            </ul>
        }
        else
        {
            <li class="nav-link">
                <NavLink href="/" Match="NavLinkMatch.All" ActiveClass="active">Homepage</NavLink>
            </li>
            <li class="nav-link">
                <NavLink href="/groups" Match="NavLinkMatch.All" ActiveClass="active">Groups</NavLink>
            </li>
            <li class="nav-link">
                <NavLink href="/events" Match="NavLinkMatch.All" ActiveClass="active">Events</NavLink>
            </li>
            <li class="nav-link">
                <NavLink href="/about" Match="NavLinkMatch.All" ActiveClass="active">About Us</NavLink>
            </li>
        }
    </div>
    <div class="action-buttons">
        @if (IsAuthorized)
        {
            <button class="create-event">Create new event</button>
        }
        else
        {
            <a class="log-in" href="#">Log In</a>
            <button class="sign-up">Sign Up</button>
        }
    </div>
    <div class="burger">
        <i class="fas fa-bars"></i>
    </div>
</header>

<main>
    <div class="body-content">
        @Body
    </div>
</main>

<footer>
    <div class="footer-content">
        <p>&copy; 2024 Your Company Name. All rights reserved.</p>
        <p>Contact Support: <a href="mailto:support@example.com">support@example.com</a></p>
    </div>
</footer>